<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".business.trade.view.TradeRecordActivity">

    <com.enternityfintech.goldcard.widget.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="交易记录" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:baselineAligned="false"
        android:minHeight="44dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_type1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:button="@null"
                android:drawableEnd="@drawable/selector_arrow"
                android:drawablePadding="@dimen/padding_m"
                android:gravity="center"
                android:lines="1"
                android:text="@string/all"
                android:textColor="@color/title"
                android:textSize="15sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_type2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rb2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:button="@null"
                android:drawableEnd="@drawable/selector_arrow"
                android:drawablePadding="@dimen/padding_m"
                android:lines="1"
                android:text="@string/all"
                android:textColor="@color/title"
                android:textSize="15sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_type3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rb3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:button="@null"
                android:drawableEnd="@drawable/selector_arrow"
                android:drawablePadding="@dimen/padding_m"
                android:lines="1"
                android:text="@string/all"
                android:textColor="@color/title"
                android:textSize="15sp" />
        </FrameLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>