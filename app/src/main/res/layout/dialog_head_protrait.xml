<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical"
    android:padding="@dimen/margin_large">

    <FrameLayout
        android:id="@+id/btn_album"
        style="@style/OptionItemBg.Center.Corner">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/padding_l"
            android:drawableStart="@drawable/icon_album"
            android:gravity="center"
            android:text="@string/select_album"
            android:textColor="@color/title"
            android:textSize="@dimen/content_b" />
    </FrameLayout>

    <View style="@style/Line" />

    <FrameLayout
        android:id="@+id/btn_photo"
        style="@style/OptionItemBg.Center.Corner">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/padding_l"
            android:drawableStart="@drawable/icon_camera"
            android:gravity="center"
            android:text="@string/select_camera"
            android:textColor="@color/title"
            android:textSize="@dimen/content_b" />
    </FrameLayout>

    <Button
        android:id="@+id/btn_cancel"
        style="@style/OptionItemBg.Center.Corner"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/cancel"
        android:textColor="@color/title" />
</LinearLayout>