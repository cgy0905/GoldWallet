<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.enternityfintech.goldcard.widget.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/trade_password_modify" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:background="@color/white"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/padding"
        android:text="@string/trade_pwd_modify_tip"
        android:textColor="@color/light_gray"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="@dimen/margin_large"
        android:paddingBottom="@dimen/margin_large">

        <Button
            android:id="@+id/btn_forgetpwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/selector_button_card_corner"
            android:onClick="onClick"
            android:text="@string/remember"
            android:textColor="@color/white"
            android:textSize="@dimen/content_b" />

        <Button
            android:id="@+id/btn_remember"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@drawable/selector_btn_white_stroke_corner"
            android:onClick="onClick"
            android:text="@string/forget"
            android:textColor="@color/main_color"
            android:textSize="@dimen/content_b" />
    </LinearLayout>

</LinearLayout>