<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_b"
    android:layout_marginStart="@dimen/margin_b"
    android:layout_marginTop="@dimen/padding_l"
    android:background="@color/white"
    android:padding="@dimen/margin_b">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/title"
        android:textSize="19sp"
        tools:text="300å…‹" />

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_title"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@id/tv_title"
        android:textColor="@color/title"
        android:textSize="@dimen/font_m"
        tools:text="SKSKFKDSFJKJKS" />

    <TextView
        android:id="@+id/tv_publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="@dimen/padding_l"
        android:textColor="@color/title"
        android:textSize="@dimen/font_m"
        tools:text="@string/publisher" />

    <TextView
        android:id="@+id/tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_publisher"
        android:layout_marginTop="@dimen/padding_l"
        android:textColor="@color/title"
        android:textSize="@dimen/font_m"
        tools:text="@string/keep_place" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_place"
        android:layout_marginTop="@dimen/padding_l"
        android:textColor="@color/title"
        android:textSize="@dimen/font_m"
        tools:text="@string/issue" />

    <ImageView
        android:id="@+id/iv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        tools:src="@mipmap/ic_launcher_round" />
</RelativeLayout>