<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_b"
        android:layout_marginRight="@dimen/margin_b"
        android:layout_marginTop="@dimen/padding_l"
        android:paddingBottom="18dp"
        android:background="@color/white"
        android:paddingTop="56dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/margin_b"
            android:drawableTop="@drawable/icon_maijinbei"
            android:text="卖金呗"
            android:gravity="center"
            android:textColor="@color/content"
            android:textSize="13sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/margin_b"
            android:drawableTop="@drawable/icon_jinhuigou"
            android:gravity="center"
            android:text="金回购"
            android:textColor="@color/content"
            android:textSize="13sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/margin_b"
            android:drawableTop="@drawable/icon_off"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/content"
            android:textSize="13sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawablePadding="@dimen/margin_b"
            android:drawableTop="@drawable/icon_off"
            android:text="--"
            android:textColor="@color/content"
            android:textSize="13sp" />

    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_l"
        android:layout_marginTop="@dimen/margin_large"
        android:src="@drawable/tab_product" />

</RelativeLayout>