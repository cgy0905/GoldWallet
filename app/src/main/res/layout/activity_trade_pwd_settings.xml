<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <com.enternityfintech.goldcard.widget.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/trade_password_setting" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/padding"
        android:padding="30dp"
        android:text="@string/trade_pwd_setting_tip"
        android:textSize="16sp" />

    <com.enternityfintech.goldcard.widget.CodeView
        android:id="@+id/pwd_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/margin_large"
        android:layout_marginTop="20dp"
        android:background="@color/transparent"
        app:borderColor="@color/board_gray"
        app:borderWidth="1dp"
        app:codeColor="@color/black"
        app:dividerColor="@color/board_gray"
        app:dividerWidth="1dp"
        app:length="6"
        app:pointRadius="4dp"
        app:showType="password" />

</LinearLayout>