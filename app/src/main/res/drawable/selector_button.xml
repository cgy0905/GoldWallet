<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/btn_end_pressed" android:startColor="@color/btn_start_pressed" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/btn_end_pressed" android:startColor="@color/btn_start_pressed" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/btn_end_color" android:startColor="@color/btn_start_color" />
        </shape>
    </item>

</selector>