<?xml version="1.0" encoding="utf-8"?>
<resources>
        <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    <!-- PaperButton Attribute -->
    -<declare-styleable name="PaperButton">
    <attr name="paper_text" format="string"/>
    <attr name="paper_text_size" format="dimension"/>
    <attr name="paper_text_color" format="color"/>
    <attr name="paper_font" format="string"/>
    <attr name="paper_color" format="color"/>
    <attr name="paper_corner_radius" format="dimension"/>
    <attr name="paper_shadow_radius" format="float"/>
    <attr name="paper_shadow_offset_x" format="float"/>
    <attr name="paper_shadow_offset_y" format="float"/>
    <attr name="paper_shadow_color" format="color"/>
</declare-styleable>

    <declare-styleable name="NavigationTabBar">
        <attr name="ntb_titled" format="boolean"/>
        <attr name="ntb_badged" format="boolean"/>
        <attr name="ntb_scaled" format="boolean"/>
        <attr name="ntb_tinted" format="boolean"/>
        <attr name="ntb_badge_use_typeface" format="boolean"/>

        <attr name="ntb_title_mode" format="enum">
            <enum name="all" value="0"/>
            <enum name="active" value="1"/>
        </attr>
        <attr name="ntb_badge_position" format="enum">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="ntb_badge_gravity" format="enum">
            <enum name="top" value="0"/>
            <enum name="bottom" value="1"/>
        </attr>
        <attr name="ntb_badge_bg_color" format="color"/>
        <attr name="ntb_badge_title_color" format="color"/>

        <attr name="ntb_typeface" format="string"/>
        <attr name="ntb_corners_radius" format="dimension"/>
        <attr name="ntb_animation_duration" format="integer"/>

        <attr name="ntb_inactive_color" format="color"/>
        <attr name="ntb_active_color" format="color"/>

        <attr name="ntb_preview_colors" format="reference"/>
    </declare-styleable>
    <declare-styleable name="PullToZoomView">
        <attr name="headerView" format="reference" />
        <attr name="contentView" format="reference" />
        <attr name="zoomView" format="reference" />
        <attr name="isHeaderParallax" format="boolean" />
        <attr name="isRefreshable" format="boolean" />
        <attr name="isLoadable" format="boolean" />
    </declare-styleable>

    <!--通用的标题-->
    <declare-styleable name="CustomToolBar">
        <!--左按钮是否可见|背景-->
        <attr name="left_btn_visible" format="boolean"/>
        <attr name="left_btn_src" format="reference|color"/>
        <!--左文本是否可见|文本内容-->
        <attr name="left_tv_visible" format="boolean"/>
        <attr name="left_tv_text" format="string"/>
        <attr name="left_tv_color" format="color" />
        <!--右边按钮是否可见|背景-->
        <attr name="right_btn_visible" format="boolean"/>
        <attr name="right_btn_src" format="reference|color"/>
        <!--右文本是否可见|文本内容|文本颜色-->
        <attr name="right_tv_visible" format="boolean"/>
        <attr name="right_tv_text" format="string"/>
        <attr name="right_tv_color" format="color" />
        <!--标题是否可见|文本内容|文本颜色-->
        <attr name="title_visible" format="boolean"/>
        <attr name="title_text" format="string"/>
        <attr name="title_color" format="color" />
        <!--背景-->
        <attr name="barBackground" format="reference|color"/>

    </declare-styleable>


    <declare-styleable name="TitleView">
        <attr name="backDrawable" format="reference" />
        <attr name="title" format="string" />
        <attr name="submit" format="string" />
        <attr name="bg" format="color" />
        <attr name="isImmersion" format="boolean" />
        <attr name="titleColor" format="color" />
        <attr name="submitColor" format="color" />
        <attr name="submitRes" format="reference" />
    </declare-styleable>


    <declare-styleable name="ClearableEditText">
        <attr name="clearIconDrawable" format="reference" />
        <attr name="clearIconPadding" format="dimension" />
        <attr name="clearIconGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="center" value="0x11" />
        </attr>
        <attr name="clearIconClipParentPadding" format="boolean" />
        <attr name="clearIconDivision" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ViewText">
        <attr name="icon" format="reference" />
        <attr name="text" format="string" />
    </declare-styleable>

    <declare-styleable name="CodeView">
        <attr name="length" format="integer" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="dividerColor" format="color" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="code" format="string" />
        <attr name="codeColor" format="color" />
        <attr name="pointRadius" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="showType" format="enum">
            <enum name="word" value="1" />
            <enum name="password" value="2" />
        </attr>
    </declare-styleable>

</resources>
